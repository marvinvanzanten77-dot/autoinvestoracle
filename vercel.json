{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/market-data-cache",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/daily-scan",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/portfolio-check",
      "schedule": "0 * * * *"
    }
  ]
}
